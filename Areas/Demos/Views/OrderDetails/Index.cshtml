                @Html.DisplayFor(modelItem => item.Customer.CustomerName)
            </td>
            <td>
                @*<a asp-action="Edit" asp-route-id="@item.OrderDetailId">Edit</a> |*@
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.OrderDetailId">Details</a> |
                @*<a asp-action="Delete" asp-route-id="@item.OrderDetailId">Delete</a>*@
                <a class="btn btn-primary"
                                asp-area="Demos" asp-controller="PaymentTypes" asp-action="Index">PaymentSection</a>
            </td>
        </tr>
}
    </tbody>
</table>
