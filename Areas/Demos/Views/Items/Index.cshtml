@model IEnumerable<Restaurant.Web.Models.Item>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    @*<a asp-action="Create">Create New</a>*@
</p>
@foreach (var item in Model) {
<div class="card" style="background-color:beige; margin-bottom:20px">
    <div class="card-header text-center text-danger text-capitalize"><h3><b>@Html.DisplayNameFor(model => model.ItemName) -   @Html.DisplayFor(modelItem => item.ItemName)</b></h3><br/></div>
    <div class="card-body">

                
            
                @Html.DisplayNameFor(model => model.ItemType) -  <b> @Html.DisplayFor(modelItem => item.ItemType)</b><br/>
            
                @Html.DisplayNameFor(model => model.ItemDescription) -  @Html.DisplayFor(modelItem => item.ItemDescription)<br/>
            
                @Html.DisplayNameFor(model => model.IsAvailable) -  @Html.DisplayFor(modelItem => item.IsAvailable)<br/>
            
                @Html.DisplayNameFor(model => model.Price) - <b> @Html.DisplayFor(modelItem => item.Price)</b><br/>
           
                @Html.DisplayNameFor(model => model.CreatedBy) -  @Html.DisplayFor(modelItem => item.CreatedBy)<br/>
            
                @Html.DisplayNameFor(model => model.CreatedDate) -  @Html.DisplayFor(modelItem => item.CreatedDate)<br/>
           
                @Html.DisplayNameFor(model => model.UpdatedBy) -  @Html.DisplayFor(modelItem => item.UpdatedBy)<br/>
          
                @Html.DisplayNameFor(model => model.UpdatedDate) -  @Html.DisplayFor(modelItem => item.UpdatedDate)<br/>
           
                @Html.DisplayNameFor(model => model.ItemCategory) - @Html.DisplayFor(modelItem => item.ItemCategory.ItemCategoryName)<br/>
                </div>

          <div class="card-footer text-center" >
                @*<a asp-action="Edit" asp-route-id="@item.ItemId">Edit</a> |*@
                <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.ItemId">Details</a> |
                @*<a asp-action="Delete" asp-route-id="@item.ItemId">Delete</a>*@
                <a class="btn btn-success"
                                asp-area="Demos" asp-controller="Orders" asp-action="Index">Order</a>     

              

          </div>
 </div>
}            

               

               

               
               

               

               

                
   
      
